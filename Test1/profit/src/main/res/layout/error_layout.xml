<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_layout"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_little"
    android:orientation="vertical"
    android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/robot"/>
        <TextView
            android:layout_marginTop="20dp"
            style="@style/NomeTextProfitTheme"
            android:text="@string/data_error"/>
        <LinearLayout
            android:id="@+id/error_refresh_btn"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/refresh_btn_bg">
            <TextView
                style="@style/NomeTextProfitTheme"
                android:text="@string/refresh_btn"/>
        </LinearLayout>
</LinearLayout>